{
  "env": {
    "browser": true,
    "node": true
  },
  "plugins": [
    "react"
  ],
  "extends": [
    "airbnb"
  ],
  "globals": {
    "APP_NAME": false,
    "DEFAULT_CITY": false,
    "NODE_ENV": false
  },
  "rules": {
    "import/prefer-default-export": "off",
    "import/no-default-export": "error",
    "comma-dangle": [
      "error",
      "never"
    ],
    "max-len": [
      "warn",
      {
        "code": 160,
        "ignoreComments": true,
        "ignoreUrls": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true,
        "ignoreRegExpLiterals": true
      }
    ],
    "react/jsx-filename-extension": "off"
  }
}
